datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ScrapedData {
  content       String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  retrievalDate DateTime?
  source        String?
  updatedAt     DateTime  @updatedAt
}

model UserInput {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  text      String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  userId    String?
}

model BookData {
  bookTitle       String?
  contentSummary  String?
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  integrationDate DateTime?
  updatedAt       DateTime  @updatedAt
}

model CustomData {
  createdAt           DateTime  @default(now())
  extractedEntityType String?
  extractionDate      DateTime?
  id                  String    @id @default(cuid())
  updatedAt           DateTime  @updatedAt
  userProvidedText    String?
}
